---
import imageUrlBuilder from '@sanity/image-url';

const builder = imageUrlBuilder({
  projectId: "x83z7c4c",
  dataset: "production",
});

const {
  node: {
    asset: { _ref },
    alt,
  },
  ...attrs
} = Astro.props;

const src = builder.image(_ref).auto('format').fit('max').width(1200).toString();
---

<img class="w-full h-auto object-cover rounded-lg mb-8" loading="lazy" src={src} alt={alt} {...attrs} />
