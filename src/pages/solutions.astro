---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation';
import Solutions from '../components/Solutions';
import Footer from '../components/Footer';
import Chatbot from '../components/Chatbot';

const lang = 'fr';
const title = 'Automatisons - Nos solutions d’automatisation IA no code pour les entreprises – Marketing, CRM, Emailing.';
const description = 'Découvrez nos solutions complètes d\'automatisation et d\'intelligence artificielle pour transformer vos processus d\'entreprise.';
---

<Layout title={title} description={description} lang={lang}>
  <Navigation lang={lang} isHomePage={false} client:load />
  <main class="pt-16">
    <Solutions lang={lang} client:load />
  </main>
  <Footer lang={lang} client:load />
  <Chatbot lang={lang} client:load />
</Layout>