---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation';
import Solutions from '../components/Solutions';
import Footer from '../components/Footer';
import Chatbot from '../components/Chatbot';

const lang = 'fr';
const title = 'Nos Solutions d’Automatisation IA pour les entreprises – Automatisons';
const description = 'Gagnez du temps et de l’argent en automatisant vos processus d\'entreprise : découvrez nos solutions d’automatisation IA et RPA.';
---

<Layout title={title} description={description}>
  <Navigation lang={lang} isHomePage={false} client:load />
  <main class="pt-16">
    <Solutions lang={lang} client:load />
  </main>
  <Footer lang={lang} client:load />
  <Chatbot lang={lang} client:load />
</Layout>