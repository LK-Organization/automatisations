---
// src/layouts/Layout.astro
import '../styles/global.css';
import { getLangFromUrl, useTranslations } from "../i18n";

// Props you pass in from pages
export interface Props {
  title: string;
  description?: string;
}

// pull props
const {
  title,
  description = "Automatisons — Votre partenaire de confiance en automatisation et intelligence artificielle",
} = Astro.props;

// detect language from URL
const lang = getLangFromUrl(new URL(Astro.request.url));
const t = useTranslations(lang);
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:image" content="/brand.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="index, follow">
    <title>{title}</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="canonical" href={`https://www.automatisons.fr${Astro.url.pathname}`} />

    <!-- Google Tag Manager -->
<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
})(window,document,'script','dataLayer','GTM-5JWJNTD5');</script>
<!-- End Google Tag Manager -->

  </head>
  <body class="font-sans">
    <main>
      <!-- Pass `lang` and `t` down to pages/components -->
      <slot {lang} {t} />
    </main>
  </body>
  <!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5JWJNTD5"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
</html>
